<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".statisticScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:layout_marginBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Your Stats"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:id="@+id/user_profileBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/round_button"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- BMI Status Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_margin="16dp"
                    android:padding="24dp"
                    app:cardBackgroundColor="#212121">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/textViewBmiTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="BMI Status"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <!-- BMI Value -->
                        <TextView
                            android:id="@+id/textViewBmiValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:text="BMI: 0.0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <!-- BMI Status -->
                        <TextView
                            android:id="@+id/textViewBmiStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="Status: Unknown"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <!-- BMI Progress Bar -->
                        <ProgressBar
                            android:id="@+id/progressBarBmi"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:max="40"
                            android:progress="0"
                            android:progressTint="@android:color/holo_blue_light" />

                        <!-- BMI Range Description -->
                        <TextView
                            android:id="@+id/textViewBmiRangeDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Underweight: &lt; 18.5\nNormal: 18.5 - 24.9\nOverweight: 25 - 29.9\nObese: 30+"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Current Weight and Body Fat Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_margin="16dp"
                    android:padding="24dp"
                    app:cardBackgroundColor="#212121">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Scale Image for Weight -->
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:src="@drawable/scale"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <!-- Current Weight -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Weight"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/currentWeightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 kgs"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Body Fat Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_margin="16dp"
                    android:padding="24dp"
                    app:cardBackgroundColor="#212121">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Percent Image for Body Fat -->
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ratio_svgrepo_com"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <!-- Current Body Fat -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Body Fat"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/currentBodyFatValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 %"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Progress Toward Goals -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#212121"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_margin="16dp"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress Toward Goal Weight"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <!-- Weight Progress Bar -->
                        <ProgressBar
                            android:id="@+id/progressBarWeight"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@android:color/holo_green_light"/>

                        <!-- Progress Percentage -->
                        <TextView
                            android:id="@+id/textViewProgressPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Workout Summary -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_margin="16dp"
                    android:padding="24dp"
                    app:cardBackgroundColor="#212121">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workout Summary"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <!-- Total Workouts -->
                        <TextView
                            android:id="@+id/totalWorkoutsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Workouts: 0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>

                        <!-- Most Recent Workout -->
                        <TextView
                            android:id="@+id/recentWorkoutValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Workout: None"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
