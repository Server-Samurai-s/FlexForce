<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient from dark to light, with dark at the top -->
    <gradient
        android:type="linear"
        android:angle="270"
    android:startColor="#151919"
    android:endColor="#6B7F7F"
    />

    <!-- Rounded corners (optional, adjust based on your design) -->
    <corners android:radius="20dp" />
</shape>
