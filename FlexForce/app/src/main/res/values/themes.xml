<resources>

    <!-- Base application theme -->
    <style name="Base.Theme.FlexForce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your Material3 theme here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gray_400</item> <!-- unselected color -->
        <item name="colorPrimaryVariant">@color/white</item> <!-- selected color -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Inherit your custom theme -->
    <style name="Theme.FlexForce" parent="Base.Theme.FlexForce" />

    <!-- Define custom button style extending MaterialButton -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>

