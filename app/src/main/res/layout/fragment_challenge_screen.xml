<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeInnerScreen"
    android:orientation="vertical"
    android:gravity="top|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Challenge"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white" />

            <ImageButton
                android:id="@+id/user_profileBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_button"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepic" />

        </RelativeLayout>

        <!-- New TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready for a challenge ?"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_medium"/>

        <!-- First CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="445dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ImageView to display the background image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chall_1" />

                <!-- TextView with rounded background, over the image -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_1btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/black"
                    android:text="Join"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="502dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ImageView to display the background image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chall_2" />

                <!-- TextView with rounded background, over the image -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_2btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/black"
                    android:text="Join"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Third CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ImageView to display the background image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chall_3" />

                <!-- TextView with rounded background, over the image -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_3btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/black"
                    android:text="Join"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>