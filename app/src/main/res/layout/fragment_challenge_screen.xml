<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeInnerScreen"
    android:orientation="vertical"
    android:gravity="top|center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:layout_marginBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Challenges"
                    android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_semibold"/>

                <ImageButton
                    android:id="@+id/user_profileBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/round_button"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />

            </RelativeLayout>

            <!-- Other views/components go here -->

        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- New TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready for a challenge ?"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_medium"/>

        <!-- First CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/challenge1"
                android:padding="16dp">

                <!-- TextView with rounded background -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_1btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="1dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/challenge2"
                android:padding="16dp">

                <!-- TextView with rounded background -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_2btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="1dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Third CardView with image background -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/challenge3"
                android:padding="16dp">

                <!-- TextView with rounded background -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button"
                    android:padding="8dp"
                    android:text="Challenge Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true" />

                <!-- Join Button -->
                <Button
                    android:id="@+id/challenge_3btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="1dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
