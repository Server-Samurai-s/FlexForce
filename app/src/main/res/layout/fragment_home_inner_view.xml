<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeInnerView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Left part of the card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCurrentStreak"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="@string/current_streak"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textViewDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 days"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:id="@+id/viewDivider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />

                <!-- Right part of the card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewWeightLabel"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textViewWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 kgs"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Regular TextView 1 -->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/favorite_workout"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Horizontal LinearLayout for the two TextViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <!-- Circular TextView on top -->
                    <TextView
                        android:id="@+id/textViewCircular"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/mon"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- Regular TextView 2 -->
                    <TextView
                        android:id="@+id/favoriteWorkoutTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="10dp"
                        android:text="Chest Day"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFitnessTracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/linearLayoutFitnessTracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TextView -->
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fitness_tracker"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>

                <!-- EditText with icon 1 -->
                <LinearLayout
                    android:id="@+id/linearLayoutEditText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imageViewIcon1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/scale_balanced_svgrepo_com"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/please_enter_weight"
                        android:textColorHint="@color/white"
                        android:textColor="@android:color/white"
                        android:background="@null"/>
                </LinearLayout>

                <!-- EditText with icon 2 -->
                <LinearLayout
                    android:id="@+id/linearLayoutEditText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imageViewIcon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calories_svgrepo_com"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/editTextCalories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/white"
                        android:hint="@string/please_enter_calories"
                        android:textColor="@android:color/white"
                        android:background="@null"/>
                </LinearLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>