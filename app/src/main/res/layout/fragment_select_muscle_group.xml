<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectMuscleGroupFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_muscle_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Muscle Group"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Muscle Group Image -->
    <ImageView
        android:id="@+id/iv_body_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Muscle Group RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_muscle_groups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btn_apply_muscle_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>
</LinearLayout>
